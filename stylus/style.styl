@charset 'utf-8'
@import 'vendor/reset'
@import 'include/variable'
@import 'include/icon'

body
    background #f7f7f7
    color $font-color
    font-family 'Lato','Noto Sans TC','Helvetica','Arial','微軟正黑體',sans-serif;
    font-size $font-size
    letter-spacing: .05em
    line-height 1.25
    padding 50px 0
.wrapper
    margin-left auto
    margin-right @margin-left
    max-width 1200px
    padding-left 10px
    padding-right @padding-left
    width 100%
.tab-group
    display flex
    justify-content space-between
    .tab-content
        flex 0 0 $fb = 49%
        max-width $fb
        width $fb
.picture-frame
    border 5px outset #ddd
.canvas-wrapper
    background #fff
    display block
    height auto
    width 100%
.element-group
    display block
    font-size 0
    margin 0 -5px
    a
    img
        display block
        width 100%
    .item
        border 2px solid #ddd
        border-radius 5px
        display inline-block
        margin 0 5px 10px
        overflow hidden
    .link
        background #fff
        padding 10px
        &:hover
            background-color #eee
        img
            width 50px
.btn-group
    display block
    font-size 0
    letter-spacing 0
    margin 20px 0 0
    text-align center
    .item
        display inline-block
        font-size 20px
        margin 0
        vertical-align middle
    .link
        background #666 linear-gradient(180deg, rgba(#fff, .25) 0%, rgba(#fff, .5) 30%, rgba(#fff, 0) 60%, rgba(darken(#666, 75%), .5) 100%)
        color #fff
        display block
        padding 10px 10px
        &:hover
            background-image linear-gradient(0deg, rgba(#fff, .25) 0%, rgba(#fff, .5) 30%, rgba(#fff, 0) 60%, rgba(darken(#666, 75%), .5) 100%)
    .item:first-child
        .link
            border-radius 5px 0 0 5px
            padding-left 20px
    .item:last-child
        .link
            border-radius 0 5px 5px 0
            padding-right 20px
    .icon
        background #fff
        display block
        margin 0 auto
.btn
    background #00bfff
    border-radius 5px
    padding .5em 1em
    &:hover
        background-color darken(#00bfff, 10%)
.icons-group
    font-size 0
    .item
        display inline-block
        font-size 30px
        vertical-align middle

